<%= simple_form_for @cocktail do |f| %>
  <div class="form-group">
    <%= f.input :name %>
  </div>
  <div>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  </div>
  <div class="mt-3">
    <a class='btn btn-primary'><%= f.submit%></a>
    <%= link_to 'Cancel', cocktails_path, class: 'btn btn-warning' %>
  </div>
<% end %>
