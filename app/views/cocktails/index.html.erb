<h1>Cocktails#index</h1>
<p>Find me in app/views/cocktails/index.html.erb</p>
<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-6 col-lg-3">
      <% @cocktails.each do |cocktail| %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1)), url('');">
          <div class="card-description">
            <%= link_to "#{cocktail.name}", cocktail_path(cocktail), class: 'card-link'%>
            <% end %>
          </div>
        </div>
      </div>
  </div>
</div>

<%= link_to 'New cocktail', new_cocktail_path %>
