<h1>Cocktails#show</h1>
<h1><%= @cocktail.name %></h1>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Recipe</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-6">
    <%= link_to "add ingredients", new_cocktail_dose_path(@cocktail), cocktail: @cocktail, dose: @dose %>
    </div>
  </div>
  <h2><%= link_to 'Confirm and go back', cocktails_path%></h2>
  <h2><%= link_to cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>Delete this item <% end %></h2>
