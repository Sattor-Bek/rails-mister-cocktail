<%= simple_form_for [@cocktail, @dose] do |f| %>
  <div class="form-group">
    <%= f.input :description %>
  </div>
  <div class="form-group">
    <%= f.association :ingredient %>
  </div>
  <div class="mt-3">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancel', cocktails_path %>
  </div>
<% end %>
